<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="Budgeter.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Budgeter">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="LightGradient1">#22EE44</Color>
            <Color x:Key="LightGradient2">#047E23</Color>

            <Color x:Key="DarkGradient1">#004E0D</Color>
            <Color x:Key="DarkGradient2">#001806</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
